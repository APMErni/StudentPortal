@{
}

@model StudentPortal.Web.Models.Entities.Student

<h1>Edit Student Details</h1>

@if (Model is null)
{
    <p>No student was found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <div>
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <div>
                <input type="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <div>
                <input type="text" class="form-control" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-3">
            <label class="form-label">Program</label>
            <div>
                <input type="text" class="form-control" asp-for="Program" />
                <span asp-validation-for="Program" class="text-danger"></span>
            </div>

        </div>


        <div>
            <button type="submit" class="btn btn-outline-success"><span class="fa fa-check"></span>Save</button>
            <a class="btn btn-outline-danger" asp-controller="Students" asp-action="List"><span class="fa fa-times"></span>Cancel</a>
        </div>
    </form>
}