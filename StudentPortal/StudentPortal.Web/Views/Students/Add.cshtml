@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
    <div class ="mt-3">
        <label class="form-label">Name</label>
        <div>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <div>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <div>
            <input type="text" class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label class="form-label">Program</label>
        <div>
            <input type="text" class="form-control" asp-for="Program" />
            <span asp-validation-for="Program" class="text-danger"></span>
        </div>
        
    </div>
    
    
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" asp-controller="Students" asp-action="List">Cancel</a>
    </div>
    
    
</form>