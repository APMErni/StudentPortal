@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
    <div class ="mt-3">
        <label for="Name" class="form-label">Name</label>
        <div>
            <input type="text" class="form-control" asp-for="Name" autocomplete="on" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label for="Email" class="form-label">Email</label>
        <div>
            <input type="email" class="form-control" asp-for="Email" autocomplete="on"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label for="Phone" class="form-label">Phone</label>
        <div>
            <input type="text" class="form-control" asp-for="Phone" autocomplete="on"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        
    </div>

    <div class="mt-3">
        <label for="Program" class="form-label">Program</label>
        <div>
            <input type="text" class="form-control" asp-for="Program" autocomplete="on"/>
            <span asp-validation-for="Program" class="text-danger"></span>
        </div>
        
    </div>
    
    
    <div>
        <button type="submit" class="btn btn-outline-success"><span class="fa fa-check"></span>Save</button>
        <a class="btn btn-outline-danger" asp-controller="Students" asp-action="List"><span class="fa fa-times"></span>Cancel</a>
    </div>
    
    
</form>