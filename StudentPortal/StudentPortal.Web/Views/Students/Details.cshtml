@{
}

@model StudentPortal.Web.Models.Entities.Student

<h1>Student Details</h1>

@if (Model is null)
{
    <p>No student was found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Program</label>
            <input type="text" class="form-control" asp-for="Program" readonly />

        </div>


        <div>
            <a class="btn btn-outline-danger" asp-controller="Students" asp-action="List">Back</a>
        </div>
    </form>
}