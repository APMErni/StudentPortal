@model List<StudentPortal.Web.Models.Entities.Student>


<h1>Students</h1>

<div class="row mb-5">
    <div class="col text-center">
        <a class="btn btn-outline-success" asp-controller="Students" asp-action="Add">Add Student</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-sm table-striped table-hover table-bordered align-middle">
        <thead>
            <tr>
                <th class="d-none d-md-table-cell">Id</th>
                <th>Name</th>
                <th>Email</th>
                <th class="d-none d-md-table-cell">Phone</th>
                <th>Program</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td class="d-none d-md-table-cell">@student.Id</td>
                    <td class="text-wrap">@student.Name</td>
                    <td class="text-break">@student.Email</td>
                    <td class="d-none d-md-table-cell">@student.Phone</td>
                    <td><div class="cell collapsible"></div>@student.Program</td>
                    <td class="text-center align-middle">
                        <div class="btn-group">
                            <a class="btn btn-outline-secondary btn-sm" asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">
                                <span class="d-md-none"><i class="fa fa-eye"></i></span>
                                <span class="d-none d-md-table-cell">Info</span>
                            </a>
                            <a class="btn btn-outline-primary btn-sm" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">
                                <span class="d-md-none"><i class="fa fa-pencil"></i></span>
                                <span class="d-none d-md-table-cell">Edit</span>
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">
                                <span class="d-md-none"><i class="fa fa-trash"></i></span>
                                <span class="d-none d-md-table-cell">Delete</span>
                            </a>
                        </div>
                    </td>
                
                </tr>
            }
        </tbody>
        </table>
</div>