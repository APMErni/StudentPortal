@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students</h1>

<div class="row mb-5">
    <div class="col text-center">
        <a class="btn btn-outline-success" asp-controller="Students" asp-action="Add">Add Student</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-sm table-striped table-hover table-bordered align-middle">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Program</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td style="overflow:hidden; overflow-wrap:break-word;word-break;max-width:100px;">@student.Email</td>
                    <td>@student.Phone</td>
                    <td>@student.Program</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                
                </tr>
            }
        </tbody>
        </table>
</div>