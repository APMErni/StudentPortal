@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students</h1>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Students" asp-action="Add">Add Student</a>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Program</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Program</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger ms-3" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>